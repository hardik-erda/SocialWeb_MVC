
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SocialWeb_MVC_.Models.UsersModel

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title></title>
    <link href="StyleSheet.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.1.0/mdb.min.css"
          rel="stylesheet" />
    <!-- MDB -->
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.1.0/mdb.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-5-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5">

                            <div class="text-center">
                                <h3 class="mb-5">Edit Username</h3>
                            </div>
                            <form method="post" asp-action="EditProfile" asp-controller="Users">

                                <div class="form mb-4">
                                    @*<label class="form-label" for="tb_username">Enter Username:</label>*@
                                    @*<asp:TextBox ID="tb_username" runat="server" class="form-control"></asp:TextBox>  *@
                                    <input type="text" class="form-control" placeholder="Enter New Username"  name="UserName" asp-for="UserName" />
                                </div>


                                <button class="btn btn-dark btn-lg btn-block" type="submit" value="submit">Update</button>

                                

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

